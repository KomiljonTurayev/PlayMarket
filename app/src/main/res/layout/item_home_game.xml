<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/custom_grey"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cardCornerRadius="8dp"
            app:strokeColor="#F5F5F9"
            android:layout_margin="8dp"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/imageGame"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="#fff"
                android:scaleType="centerCrop"
                android:src="@drawable/box"
                 />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:cardCornerRadius="10dp"
                app:strokeColor="#F5F5F9"
                app:strokeWidth="1dp">

                <ImageView
                    android:id="@+id/imageGame2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/box"
                    app:layout_constraintDimensionRatio="1:1" />

            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textGameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4sp"
                    android:paddingBottom="4sp"
                    android:text="Kids World Shop"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textGameTitleBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4sp"
                    android:text="Kids World Shop"
                    android:textColor="@color/white"
                    android:textSize="8sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,3 "
                        android:textColor="@color/white"
                        android:id="@+id/textGameSize"
                        android:textSize="8sp"
                        />



            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>